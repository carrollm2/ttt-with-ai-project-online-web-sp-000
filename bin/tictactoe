#!/usr/bin/env ruby

require_relative '../config/environment'

puts "Welcome to Tic-Tac-Toe"

puts 'What kind of game would you like to play? (0, 1, or 2 player). Type "N" if you do not want to play?'

response = gets.strip

# while response != "N"

if response.to_i < 1

  ai_game = Game.new
  ai_game.play

else
  game_board = Board.new
  player_1 = Players::Human.new("X")

  if response.to_i == 1
    one_player_game = Game.new(player_1, game_board)
    game_board.display
    one_player_game.play
  elsif response.to_i == 2
    player_2 = Players::Human.new("X")
    two_player_game = Game.new(player_1, player_2, game_board)
    game_board.display
    two_player_game.play
  end
end

#   puts "Would you like to player again?"
#   response = gets.strip
#
# end
