#!/usr/bin/env ruby

require_relative '../config/environment'

puts "Welcome to Tic-Tac-Toe"

puts 'What kind of game would you like to play? (0, 1, or 2 player). Type "N" if you do not want to play?'

response = gets.strip

while response != "N"

  if response.to_i < 1

    ai_game = Game.new
    ai_game.play

  else
    game_board = Board.new
    player_1 = Players::Human.new("X")

    if gets.strip == 1
      Game.new(player_1, game_board)
    elsif gets.strip == 2
      player_2 = Players::Human.new("X")
      Game.new(player_1, player_2, game_board)
    end
  end

  puts "Would you like to player again?"
  response = gets.strip

end
